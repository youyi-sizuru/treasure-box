<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ExButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingTop">@dimen/default_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/default_padding_vertical</item>
        <item name="android:paddingStart">@dimen/default_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/default_padding_horizontal</item>
    </style>

    <style name="ExShapeAppearance">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
    </style>

    <style name="ExShapeAppearance.Stadium">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ExEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="background">@null</item>
    </style>

    <style name="ExRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="ExCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="ExEditStyle" parent="TextAppearance.AppCompat.Medium">

    </style>

    <style name="ExToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <item name="navigationIcon">?homeAsUpIndicator</item>
        <item name="android:background">?colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="android:minHeight">?actionBarSize</item>
        <item name="maxButtonHeight">?actionBarSize</item>
        <item name="navigationToFinish">true</item>
    </style>
</resources>